<!-- Result popup info after update user -->
<script type="text/html" id='script_updateRecord'>
<% if (records.length > 0)  { %>
	<% _.each(records, function(item,key,list) { %>
        <div class="alert alert-<%= item.result %> fade in alert-dismissible">
            <a href="javascript:$('.alert').remove();" class="close" aria-label="close" title="close">Ã—</a>
            <strong><%= crud.capitalize(item.result) %>!</strong>. <%= item.command %> was <%= item.not %> sucessfull!
        </div>
    <% }); %>
<% } %>
</script>
